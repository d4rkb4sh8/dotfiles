(defcfg
  process-unmapped-keys yes
  log-layer-changes no
)

(defsrc
  a s d f h j k l ; caps esc z 
)

(defvar
 tap-time 200
 hold-time 200
)

(defalias
  a-mod (tap-hold $tap-time $hold-time a lmet)
  s-mod (tap-hold $tap-time $hold-time s lalt)
  d-mod (tap-hold $tap-time $hold-time d lsft)
  f-mod (tap-hold $tap-time $hold-time f lctl)
  h-mod (tap-hold $tap-time $hold-time h S-grv)
  j-mod (tap-hold $tap-time $hold-time j rctl)
  k-mod (tap-hold $tap-time $hold-time k rsft)
  l-mod (tap-hold $tap-time $hold-time l ralt)
  ;-mod (tap-hold $tap-time $hold-time ; rmet)
  caps-mod (tap-hold $tap-time $hold-time esc grv)
  esc-mod (tap-hold $tap-time $hold-time caps scln)
  z-mod (tap-hold $tap-time $hold-time z (layer-toggle two))
)

(deflayer one 
  @a-mod
  @s-mod
  @d-mod
  @f-mod
  @h-mod
  @j-mod
  @k-mod
  @l-mod
  @;-mod
  @caps-mod
  @esc-mod
  @z-mod
)

(deflayer two 
  _ 
  _
  _
  _
  left 
  down 
  up 
  rght 
  _
  _
  _
  _
)
